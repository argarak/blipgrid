@font-face
  font-family Gohu
  src url("/assets/GohuFontuni14NerdFontPropo-Regular.ttf") format("truetype")

:root
  --main-background #000000
  --surface-background #111111
  --surface-background-alt #0a0a0a
  --surface-active #222222
  --on-surface-active #333333
  --on-surface-focus #444444
  --note-color #aaaaaa
  --primary-text #ffffff
  --primary-color #0062BC
  --solo-color #81C784
  --mute-color #E57373
  --shadow-color #000000aa
  --shadow-color-alt #00000033

primary-color = #0062BC

m-font = "IBM Plex Mono", "Menlo", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", Courier, monospace
m-font-size = 13px
m-border-radius = 15px

m-border-size = 1px
note-active-color = #aaa

m-background-color = #111111
m-background-color-alt = #0a0a0a

notebox-size = 32px
notebox-gap = 12px
