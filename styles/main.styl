//@import '@material-design-icons/font'

m-font = "GohuFont uni-14 Nerd Font Propo"
m-font-size = 14px
m-border-radius = 7px

h1
  color #f44336
  font-family Roboto
  text-align center

body
  background-color #212121
  height 100vh
  margin 0
  font-family m-font
  font-size m-font-size

  color #fff

button
  appearance none
  font-family default-font
  font-size m-font-size
  border none
  background #fff1
  border-radius m-border-radius

  color #fff
  transition all .1s ease-in-out

  &:hover
    background #fff2

#mainContainer
  display flex
  flex-direction column
  height 100%

input[type="number"]
  appearance none
  border none
  background #fff1
  color #fff
  padding 5px
  border-radius m-border-radius

  width 50px
  font-family m-font
  font-size m-font-size

#headContainer
  padding 10px
  background #111111

  display flex
  flex-direction row
  align-items center

  label, input
    margin-left 15px

#editContainer
  display flex
  align-items center
  justify-content center
  flex-direction row
  background-color #212121
  height 100%

#paramContainer
  background #0004
  height 100%

  flex 1

  display flex
  flex-direction column
  justify-content center
  align-items center

  label
    text-decoration underline
    color #aaa

.knobSet
  margin 20px

#sequenceGrid
  flex 1

  display grid
  grid-template-columns repeat(4, 52px)
  grid-auto-rows minmax(42px, auto)
  justify-content center

.noteBox
  width 32px
  height 32px
  background-color rgb(66, 66, 66)
  border-radius m-border-radius
  margin 10px
  border 2px solid rgb(66, 66, 66)
  transition all .1s ease-in-out

  &.active
    background-color rgb(67, 160, 71)
    border-color rgb(67, 160, 71)
    box-shadow 0px 0px 10px rgba(67, 160, 71, 0.5)

  &.marker
    border-bottom-color #BDBDBD
