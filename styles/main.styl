//@import '@material-design-icons/font'
@require "defines.styl"
@require "input-common.styl"

h1
  color #f44336
  font-family Roboto
  text-align center

body
  background-color #212121
  height 100vh
  margin 0
  font-family m-font
  font-size m-font-size

  color #fff

button
  appearance none
  font-family default-font
  font-size m-font-size
  border none
  background #fff1
  border-radius m-border-radius

  color #fff
  transition all .1s ease-in-out

  &:hover
    background #fff2

#mainContainer
  display flex
  flex-direction column
  height 100%

.hfill
  width 100%

#headContainer
  padding 5px
  background #111
  border-bottom m-border-size solid #222

  display flex
  flex-direction row
  align-items center

  button
    display flex
    align-items center
    justify-content center
    height 100%
    padding 0px 0px

  input
    margin-left 10px

  label, input
    display flex
    align-items center
    border-radius 0px

#editContainer
  display flex
  align-items start
  justify-content center
  flex-direction row
  background-color #000
  height 100%

#sideContainer
  background #0000
  border-right 0px solid #222
  height 100%

  flex 1

  display flex
  flex-direction column
  justify-content center
  align-items center

#paramContainer
  background #0000
  border-left 0px solid #222

  flex 1
  display grid

  grid-template-columns repeat(3, min-content)

  flex-direction column
  justify-content right

  label
    color #aaa

.knobSet
  display flex
  margin 10px
  align-items center
  width 150px

  flex-direction column
  border m-border-size solid #222
  border-radius 0px
  padding 5px
  background-color #111

  select, ui-knob
    margin 0px 5px
