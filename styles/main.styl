//@import '@material-design-icons/font'

m-font = "GohuFont uni-14 Nerd Font Propo"
m-font-size = 14px
m-border-radius = 0px

m-border-size = 1px
note-active-color = #aaa

h1
  color #f44336
  font-family Roboto
  text-align center

body
  background-color #212121
  height 100vh
  margin 0
  font-family m-font
  font-size m-font-size

  color #fff

button
  appearance none
  font-family default-font
  font-size m-font-size
  border none
  background #fff1
  border-radius m-border-radius

  color #fff
  transition all .1s ease-in-out

  &:hover
    background #fff2

#mainContainer
  display flex
  flex-direction column
  height 100%

.hfill
  width 100%

input[type="range"]
  appearance none
  background #444
  height 70%

  &::-webkit-slider-thumb
    -webkit-appearance none
    appearance none
    background #222
    border none

  &::-moz-range-thumb
    background #222
    border none
    border-radius 0px
    height 100%
    width 5px

input[type="number"]
  -moz-appearance textfield
  appearance textfield

  border none
  background #fff1
  color #fff
  padding 5px
  border-radius m-border-radius

  width 30px
  text-align center
  font-family m-font
  font-size m-font-size

  margin-right 5px

#headContainer
  padding 5px
  background #111
  border-bottom m-border-size solid #222

  display flex
  flex-direction row
  align-items center

  button
    display flex
    align-items center
    justify-content center
    height 100%
    padding 0px 0px

  input
    margin-left 10px

  label, input
    display flex
    align-items center
    border-radius 0px

#editContainer
  display flex
  align-items center
  justify-content center
  flex-direction row
  background-color #000
  height 100%

#sideContainer
  background #0000
  border-right 0px solid #222
  height 100%

  flex 1

  display flex
  flex-direction column
  justify-content center
  align-items center

#paramContainer
  background #0000
  border-left 0px solid #222
  height 100%

  flex 1
  display grid

  grid-template-columns repeat(3, 2fr)

  flex-direction column
  justify-content center
  align-items start

  label
    text-decoration underline
    color #aaa

.knobSet
  display flex
  margin 10px
  align-items center

  flex-direction column
  border m-border-size solid #222
  border-radius 0px
  padding 5px
  background-color #111

  select, ui-knob
    margin 0px 5px

  select
    height 30px
    background #222
    border none
    color #fff
    border-radius 20px
    padding 2px 10px

#sequenceGrid
  flex 1

  display grid
  grid-template-columns repeat(4, 52px)
  grid-auto-rows minmax(0px, auto)
  justify-content center

.noteBox
  width 32px
  height 32px
  background-color #222
  border-radius m-border-radius
  margin 8px 10px
  border 1px solid rgb(66, 66, 66)
  transition all .1s linear

  &.active
    background-color note-active-color
    border-color note-active-color
    //box-shadow 0px 0px 10px rgba(67, 160, 71, 0.5)

  &.marker
    border-color #fff
