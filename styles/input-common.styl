@require "defines.styl"

.dropdown
  margin 0
  background #fff1

  display flex
  flex-direction column
  min-width 200px

  .droplabel
    margin-left 10px
    margin-right 5px

    display flex
    flex-direction row
    align-items center
    justify-content space-between

    min-height 100%

    z-index 0

  .dropmenu
    z-index 999
    transition all .2s ease-in-out

    width 0%
    opacity 0

    padding 0px 0px
    margin 0
    position relative
    background #222
    box-shadow 10px 10px 10px #0003

    button
      padding 10px
      transition background .2s ease-in-out
      white-space nowrap

      background #222
      cursor pointer

      width 100%
      border none
      border-radius 0px

      display flex
      flex-direction row
      justify-content start
      align-items center

      span
        margin-right 10px

    button:hover
      background #333

    button:focus
      background #444

  &:hover > .dropmenu,
  &:focus-within > .dropmenu
    opacity 1
    width 100%

  &:hover > .droplabel span,
  &:focus-within > .droplabel span
    transform rotate(180deg)

button
  appearance none
  font-family default-font
  font-size m-font-size
  border none
  background #fff1
  border-radius m-border-radius

  color #fff
  transition all .1s ease-in-out

  font-family m-font
  display flex
  align-items center

  &.active
    background #fff5

  &.active:hover
    background #fff7

  &:hover
    background #fff2

input[type="range"]
  appearance none
  background #444
  height 70%

  &::-webkit-slider-thumb
    -webkit-appearance none
    appearance none
    background #222
    border none

  &::-moz-range-thumb
    background #222
    border none
    border-radius 0px
    height 100%
    width 5px

input[type="number"], input[type="text"]
  -moz-appearance textfield
  appearance textfield

  border none
  background #fff1
  color #fff
  padding 6px 10px
  border-radius m-border-radius

  text-align center
  font-family m-font
  font-size m-font-size

  margin-right 5px

select
  font-family m-font
  font-size m-font-size

  height 30px
  background #222
  border none
  color #fff
  border-radius 20px
  padding 2px 10px
