@require "defines.styl"
@require "input-common.styl"

#trackTabs
  display flex
  flex-direction row
  width 100%
  margin-bottom 10px
  justify-content space-around

  .active
    background #222
    color #fff
    border-color primary-color

  .solo
    color #81C784

  .mute
    color #E57373

.trackTab
  background #111
  height 100%
  padding 5px 25px
  width 100%
  display flex
  align-items center
  justify-content center
  border-bottom 1px #222 solid

  transition all .1s ease-in-out
  cursor pointer
  user-select none

#stepsContainer
  display flex
  flex-direction row
  justify-content center
  align-items center

#sequenceGridContainer
  flex 1
  display flex
  align-items start
  overflow-y hidden
  margin 10px 0px

#algorithmSelect
  width 100%
  max-width 40ch
  margin-top 5px
  margin-right 5px

#knobContainer
  display flex
  flex-direction row
  justify-content center
  align-items start

  width 100%
  min-height 120px

  ui-knob
    width 100%
    max-width 15ch
    margin 0px 15px

#progress
  width 100%
  height 1px
  background-color #000

  div
    transition width .1s linear
    background-color primary-color
    height 1px
