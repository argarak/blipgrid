@require "defines.styl"
@require "input-common.styl"

#trackTabs
  display flex
  flex-direction row
  width 100%
  margin-bottom 10px
  justify-content space-around

  :first-child
    background #222
    color #fff
    border-color primary-color

.trackTab
  background #111
  height 100%
  padding 5px 25px
  width 100%
  display flex
  align-items center
  justify-content center
  border-bottom 1px #222 solid

#sequenceGridContainer
  flex 1
  display flex
  align-items center
  overflow-y hidden
  margin 10px 0px

#sequenceGrid
  flex 1

  display grid
  grid-template-columns repeat(4, 32px)
  justify-content center
  max-height 100%

  margin 0px 12px
  gap 15px

.noteBox
  width 32px
  height 32px
  background-color #222
  border-radius m-border-radius
  border 1px solid rgb(66, 66, 66)
  transition all .1s linear

  &.active
    background-color note-active-color
    border-color note-active-color
    //box-shadow 0px 0px 10px rgba(67, 160, 71, 0.5)

  &.marker
    border-color #fff

#algorithmSelect
  width 100%
  margin-top 5px
  margin-right 5px

#knobContainer
  width 100%
  min-height 120px
  ui-knob
    margin 0px 5px
