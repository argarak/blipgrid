@require "../defines.styl"
@require "../input-common.styl"

#viewTabs
  display flex
  flex-direction row
  width 100%
  margin-bottom 10px
  justify-content space-around

  height 40px

  .tab
    background #111

    padding 0px 25px
    width 100%
    display flex
    align-items center
    justify-content center
    border-bottom 1px #222 solid

    transition all .1s ease-in-out
    cursor pointer
    user-select none

    span
      margin-right 5px
      color #444
