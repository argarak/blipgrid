@require "../defines.styl"
@require "../input-common.styl"

:host
  display flex
  height 100%

  flex-direction column

#loadControls
  display flex
  flex-direction row
  align-items center
  justify-content space-between
  padding 0px 20px

  #patchUpload
    display flex
    flex-direction row

  #patchUpload button
    align-self start
    margin-right 10px
    height 34px
    padding 10px 10px

    .material-icons
      margin-right 10px

#patchControls
  display grid

  grid-template-columns repeat(auto-fill, 180px)

  justify-content center

  label
    color var(--primary-text)

#effectControlContainer
  display flex
  flex-direction column
  justify-content space-around

  margin-top auto
  position sticky
  bottom 0

  #effectTitle
    user-select none

    display flex
    align-items center
    justify-content center

    width 100%
    margin 0

    color var(--note-color)
    background linear-gradient(var(--surface-background), var(--surface-background-alt))
    border-bottom none

    padding 10px

    span
      color var(--on-surface-focus)
      margin-right 10px

  #effectControls
    display flex
    flex-direction row
    justify-content space-evenly

    padding 10px 0px

    background-color var(--surface-background-alt)

    ui-knob
      width 100%

.knobSet
  display flex
  margin 10px
  align-items center
  width 150px

  flex-direction column
  border m-border-size solid var(--surface-active)
  border-radius 5px
  padding 5px
  background-color var(--surface-background)

  box-shadow 0px 0px 10px var(--shadow-color)

  select, ui-knob
    margin 0px 5px

.selectContainer
  display flex
  justify-content center
  align-items center

  flex-direction column

  .selectLabel
    margin-top 2px
    user-select none
    font-weight 500

    text-align center
