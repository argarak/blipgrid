@require "../defines.styl"
@require "../input-common.styl"

:host
  display flex
  height 100%

  flex-direction column

#loadControls
  display flex
  flex-direction row
  align-items center
  justify-content end
  padding-right 2ch
  padding-top 1ch

  #patchUpload button
    align-self start
    margin-right 10px

#patchControls
  display grid

  grid-template-columns repeat(auto-fill, 180px)

  flex-direction column
  justify-content center

  label
    color var(--primary-text)

#effectControlContainer
  display flex
  flex-direction column
  justify-content space-around

  margin-top auto
  position sticky
  bottom 0

  #effectTitle
    user-select none

    display flex
    align-items center

    width 100px
    margin 0

    color var(--note-color)
    background-color var(--surface-background)
    border-bottom none

    padding 10px

    span
      color var(--on-surface-focus)
      margin-right 10px

  #effectControls
    display flex
    flex-direction row
    justify-content space-evenly

    padding 10px 0px
    border 2px solid var(--surface-background)
    background-color var(--surface-background-alt)
    border-bottom none
    border-left none
    border-right none

.knobSet
  display flex
  margin 10px
  align-items center
  width 150px

  flex-direction column
  border m-border-size solid var(--surface-active)
  border-radius 5px
  padding 5px
  background-color var(--surface-background)

  box-shadow 0px 0px 10px var(--shadow-color)

  select, ui-knob
    margin 0px 5px
