@require "../defines.styl"
@require "../input-common.styl"

.presetBtn
  padding 5px 10px
  margin-top 10px
  width 100%

  border-radius 0
  border-left var(--primary-color) 2px solid

.presetCat
  margin 10px 0px

.catLabel
  font-weight 800

#dialogContent
  display flex
  flex-direction column
  min-width 300px

.inputContainer
  display flex
  flex-direction column

  margin 10px 0px

  label
    font-weight 700
    margin-bottom 5px

#lowerActions
  width 100%
  display flex
  justify-content end
  align-items center

  button
    margin-top 10px
    padding 5px 10px

    span
      margin-right 10px

  select
    margin-left 10px
