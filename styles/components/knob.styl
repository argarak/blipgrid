.outline-active
  cx 50%
  cy 50%
  fill #0000
  stroke-width 2px
  stroke var(--note-color)

.outline
  cx 50%
  cy 50%
  fill #0000
  stroke-width 2px
  stroke var(--on-surface-active)

.marker
  stroke-width 2px
  transform-origin center center
  stroke-linecap round

  stroke var(--note-color)
  /* controls the percieved length of the marker without
   * screwing with more trigonometry */
  stroke-dashoffset -12
  stroke-dasharray 20

svg
  position relative
  top 0
  left 0
  width 50px
  height 50px

#knob
  display inline-flex
  flex-direction column
  align-items center
  margin 10px 0px
  width 100%

  &:hover
    cursor ns-resize

.label
  margin-top 2px
  user-select none
  font-weight 500

  text-align center
