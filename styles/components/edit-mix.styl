@require "../defines.styl"
@require "../input-common.styl"

:host
  display flex
  height 100%

  flex-direction column

#mixerControls
  display flex

  width 100%

  flex-direction row
  justify-content center
  align-items center

  label
    color var(--primary-text)

.knobSet
  display flex
  align-items center
  width 80%

  flex-direction column
  border-left m-border-size solid var(--surface-active)
  border-right m-border-size solid var(--surface-active)
  padding 5px

.knobContainer
  display flex
  flex-direction column
  width 100%
  justify-content space-evenly

  .selectContainer, ui-knob
    width 100%

.selectContainer
  display flex
  justify-content center
  align-items center

  flex-direction column

  .selectLabel
    margin-top 2px
    user-select none
    font-weight 500

    text-align center
