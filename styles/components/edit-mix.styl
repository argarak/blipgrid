@require "../defines.styl"
@require "../input-common.styl"

:host
  display flex
  height 100%

  flex-direction column

#mixerControls
  display grid
  grid-template-columns repeat(4, minmax(100px, 1fr))
  justify-content center
  max-height 100%

  margin-top auto
  width 100%

  // lazy hack to remove leftmost border
  margin-left -1px

  justify-content center
  align-items center

  label
    color var(--primary-text)

.knobSet
  display flex
  align-items center
  width 100%
  height 100%

  margin 10px 0px

  flex-direction column
  border-left m-border-size solid
  border-right m-border-size solid
  border-image linear-gradient(
      to bottom,
      var(--surface-active),
      var(--surface-background-alt)
    ) 1 100%

.knobContainer
  display flex
  flex-direction column
  width 100%
  justify-content space-evenly
  align-items center

  .selectContainer, ui-knob
    width 100%

  button
    display flex
    justify-content center
    align-items center
    margin 5px

    width 80px

    &.mute
      background-color var(--mute-color)

    &.solo
      background-color var(--solo-color)

.selectContainer
  display flex
  justify-content center
  align-items center

  flex-direction column

  .selectLabel
    margin-top 2px
    user-select none
    font-weight 500

    text-align center
